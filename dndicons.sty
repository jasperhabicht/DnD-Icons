\ProvidesExplPackage {dndicons} {2024-03-25} {1.8.1} 
    {DnD Icons Package}

\bool_new:N \l__dndicons_use_legacy_variant_bool
\clist_new:N \l__dndicons_forwarded_options_clist
\keys_define:nn { dndicons / select ~ variant } { 
    l3        .bool_set:N = \l__dndicons_use_legacy_variant_bool ,
    l3        .default:n  = { false } ,
    pgf       .bool_set:N = \l__dndicons_use_legacy_variant_bool ,
    pgf       .default:n  = { true } ,
    unknown   .code:n     = { \clist_put_right:Nn \l__dndicons_forwarded_options_clist {#1} }
}
\ProcessKeyOptions [ dndicons / select ~ variant ]

\bool_if:NTF \l__dndicons_use_legacy_variant_bool {
  \RequirePackage [ \l__dndicons_forwarded_options_clist ] { dndicons-pgf }
} {
  \RequirePackage [ \l__dndicons_forwarded_options_clist ] { dndicons-l3 }
}

